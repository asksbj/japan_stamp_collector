CREATE DATABASE IF NOT EXISTS etl;
USE etl;

CREATE TABLE IF NOT EXISTS task (
    id INT AUTO_INCREMENT PRIMARY KEY, 
    domain VARCHAR(32) NOT NULL, 
    task_type VARCHAR(64) NOT NULL, 
    owner  VARCHAR(64) NOT NULL, 
    last_update TIMESTAMP DEFAULT CURRENT_TIMESTAMP, 
    date VARCHAR(32)
);

CREATE DATABASE IF NOT EXISTS japan_stamp_collector;
USE japan_stamp_collector;

CREATE TABLE IF NOT EXISTS fuke_ingestor_record (
    id INT AUTO_INCREMENT PRIMARY KEY, 
    owner  VARCHAR(64) NOT NULL,
    state  VARCHAR(64) NOT NULL, 
    date VARCHAR(32),
    created_time TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    last_updated TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    UNIQUE KEY uk_owner_date (owner, date)
);

CREATE TABLE IF NOT EXISTS prefecture (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(32) NOT NULL,
    full_name VARCHAR(32) NOT NULL,
    en_name VARCHAR(32) NOT NULL,
    jpost_url VARCHAR(128),
    pref_id INT UNIQUE NOT NULL
);

CREATE TABLE IF NOT EXISTS city (
    id INT PRIMARY KEY AUTO_INCREMENT,
    name VARCHAR(32) NOT NULL,
    kind VARCHAR(16),
    reading VARCHAR(32),
    pref_id INT,
    FOREIGN KEY (pref_id) REFERENCES prefecture(pref_id)
);

CREATE TABLE IF NOT EXISTS facility (
    id INT PRIMARY KEY AUTO_INCREMENT,
    name VARCHAR(64) NOT NULL,
    address VARCHAR(255),
    postcode VARCHAR(16),
    latitude DECIMAL(10, 8),
    longtitude DECIMAL(11, 8),
    business_hours JSON,
    pref_id INT,
    city_id INT,
    FOREIGN KEY (pref_id) REFERENCES prefecture(pref_id),
    FOREIGN KEY (city_id) REFERENCES city(id)
);

CREATE TABLE IF NOT EXISTS fuke (
    id INT PRIMARY KEY AUTO_INCREMENT,
    name VARCHAR(64) NOT NULL,
    abolition BOOLEAN,
    image_url VARCHAR(255),
    start_date VARCHAR(16),
    description VARCHAR(255),
    author VARCHAR(64),
    jpost_id INT,
    FOREIGN KEY (jpost_id) REFERENCES facility(id)
);



